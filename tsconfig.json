{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@getcommunity/config-typescript/solidjs-lib.json",
  "include": [
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "tsup.config.ts",
    "eslint.config.mjs",
    ".prettierrc.mjs"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "noEmit": true
  },
  "exclude": ["dist", "node_modules", ".vscode"]
}
